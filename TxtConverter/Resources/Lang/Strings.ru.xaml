<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:s="clr-namespace:System;assembly=mscorlib">
    <s:String x:Key="app_title">TXT Конвертер Файлов</s:String>

    <!-- Main Window -->
    <s:String x:Key="ui_settings">Настройки</s:String>
    <s:String x:Key="ui_source_dir">Папка с исходниками:</s:String>
    <s:String x:Key="ui_choose_btn">Выбрать...</s:String>
    <s:String x:Key="ui_preset">Пресет:</s:String>
    <s:String x:Key="ui_extensions">Расширения (через запятую):</s:String>
    <s:String x:Key="ui_extensions_prompt">Например: gd, tscn, java, xml</s:String>
    <s:String x:Key="ui_ignored">Игнорируемые папки (через запятую):</s:String>
    <s:String x:Key="ui_ignored_prompt">Например: Library, Temp, obj</s:String>
    <s:String x:Key="ui_rescan_btn">Пересканировать</s:String>

    <s:String x:Key="ui_structure_cb">Создавать файл структуры</s:String>
    <s:String x:Key="ui_compact_structure_cb">Компактный режим (Свернуть лишнее)</s:String>
    <s:String x:Key="ui_token_compression_cb">Умное сжатие (Убрать визуальный шум)</s:String>
    <s:String x:Key="ui_merged_cb">Создавать единый файл со всем кодом ({0})</s:String>

    <s:String x:Key="ui_select_files_btn">Выбрать файлы...</s:String>
    <s:String x:Key="ui_convert_btn">НАЧАТЬ КОНВЕРТАЦИЮ</s:String>

    <s:String x:Key="ui_log_label">Лог выполнения:</s:String>
    <s:String x:Key="ui_compression_label">Сжатие токенов:</s:String>
    <s:String x:Key="ui_comp_none">Нет (Оригинал)</s:String>
    <s:String x:Key="ui_comp_smart">Умное (Безопасно)</s:String>
    <s:String x:Key="ui_comp_max">Максимум (уникальный алгоритм сжатия)</s:String>

    <!-- Исправлено: Убрали эмодзи, оставили только текст -->
    <s:String x:Key="ui_ai_select_btn">AI Выбор</s:String>

    <!-- Status -->
    <s:String x:Key="ui_status_ready">Готов к работе</s:String>
    <s:String x:Key="ui_status_waiting">Ожидание действий</s:String>
    <s:String x:Key="ui_status_scanning">Сканирование...</s:String>
    <s:String x:Key="ui_status_converting">Конвертация...</s:String>
    <s:String x:Key="ui_status_analyzing">ИИ Анализирует проект...</s:String>
    <s:String x:Key="ui_status_done">Готово</s:String>
    <s:String x:Key="ui_status_error">Ошибка</s:String>

    <!-- Settings Window -->
    <s:String x:Key="ui_settings_general">Общие</s:String>
    <s:String x:Key="ui_settings_ai">ИИ (Gemini)</s:String>
    <s:String x:Key="ui_settings_lang">Язык интерфейса:</s:String>
    <s:String x:Key="ui_settings_apikey">API Ключ:</s:String>
    <s:String x:Key="ui_settings_model">Модель:</s:String>
    <s:String x:Key="ui_settings_thinking">Размышление (Thinking):</s:String>
    <s:String x:Key="ui_settings_tokens">Бюджет токенов:</s:String>
    <s:String x:Key="ui_settings_enable_reasoning">Включить размышление</s:String>
    <s:String x:Key="ui_settings_close">Закрыть</s:String>

    <!-- Log Messages -->
    <s:String x:Key="log_app_ready">Приложение готово к работе.</s:String>
    <s:String x:Key="log_preset_selected">Выбран пресет '{0}'. Настройки обновлены.</s:String>
    <s:String x:Key="log_dir_selected">Выбрана папка с исходниками: {0}</s:String>
    <s:String x:Key="log_error_no_dir">Ошибка: Папка не выбрана.</s:String>
    <s:String x:Key="log_scanning_start">Запуск сканирования...</s:String>
    <s:String x:Key="log_scan_complete">Сканирование завершено. Найдено файлов: {0}</s:String>
    <s:String x:Key="log_scan_error">ОШИБКА СКАНИРОВАНИЯ: {0}</s:String>
    <s:String x:Key="log_files_selected">Выбрано для отчета: {0} из {1}</s:String>
    <s:String x:Key="log_no_files">Нет файлов для обработки.</s:String>
    <s:String x:Key="log_conversion_start">Начало конвертации...</s:String>
    <s:String x:Key="log_conversion_success">КОНВЕРТАЦИЯ УСПЕШНА</s:String>
    <s:String x:Key="log_result_path">Результат в папке: {0}</s:String>
    <s:String x:Key="log_conversion_error">КРИТИЧЕСКАЯ ОШИБКА КОНВЕРТАЦИИ: {0}</s:String>

    <!-- Report Messages -->
    <s:String x:Key="report_structure_header"># Структура скопированных файлов</s:String>
    <s:String x:Key="report_merged_header">Единый файл с полным кодом проекта ({0})</s:String>
    <s:String x:Key="report_generated_date">Дата генерации: {0}</s:String>
    <s:String x:Key="report_file_header">ФАЙЛ: {0}</s:String>
    <s:String x:Key="report_read_error">!!! ОШИБКА ЧТЕНИЯ: {0} !!!</s:String>
    <s:String x:Key="report_stub_warning">*** СИСТЕМНАЯ ИНСТРУКЦИЯ: Файлы с пометкой (Stub) не содержат кода для экономии контекста. Если логика задачи требует кода из этих файлов, ТЫ ОБЯЗАН запросить его у пользователя. Не додумывай реализацию. ***</s:String>
    <s:String x:Key="report_omitted">(Stub)</s:String>

    <!-- Task Messages -->
    <s:String x:Key="task_preparing">Подготовка к конвертации...</s:String>
    <s:String x:Key="task_processing">Обработка: {0}</s:String>
    <s:String x:Key="task_generating_structure">Генерация файла структуры...</s:String>
    <s:String x:Key="task_merging">Сборка единого файла...</s:String>
    <s:String x:Key="task_done">Готово!</s:String>
</ResourceDictionary>